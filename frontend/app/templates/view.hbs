{{#if initialLoad}}
  <h2>{{topic}}</h2>
  {{#if locked}}
    <p>(voting locked)</p>
  {{/if}}
  {{#if options}}
  <br>
    {{#each displayedOptions as |option|}}
      {{#spin-button class=(concat "btn btn-block btn-" (if option.selected "success" "dark")) buttonStyle="zoom-out" disabled=(or inFlight socket.disconnected locked) action=(action "vote" option)}}
        <h5>{{option.name}}</h5>
        <p>{{option.votes}} votes</p>
      {{/spin-button}}
    {{/each}}
  {{/if}}
  {{#liquid-if allowEditing}}
    <br>
    <h5>{{#link-to "edit" pollId class="text-dark"}}Edit Poll{{/link-to}}</h5>
  {{/liquid-if}}
{{else}}
  <h2>Loading...</h2>
{{/if}}
